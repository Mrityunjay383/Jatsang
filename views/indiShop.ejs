<%- include("header") -%>

<section class="sec">
  <h2><%= shopDetails.shopName%></h2>


  <div class="products">
    <% for(let product of products){%>
    <div class="product">
      <p class="proTitle"><%= product.title%></p>
      <div class="proDes">
        <p><%= product.des%></p>
        <p>Price: Rs.<%= product.price%></p>

        <form class="" action="/cart/addToCart" method="post">
          <button type="submit" name="addBtn" class="btn btn-dark" value="<%= product._id%>">Add to cart</button>
        </form>
      </div>

    </div>
    <%}%>
  </div>


  </section>

</body>
</html>
