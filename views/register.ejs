<%- include("authHeader") -%>
<link rel="stylesheet" href="/styles/auth.css">

<div class="container" id="container">

	<div class="form-container sign-up-container">
		<form action="/auth/register" method="POST">
			<h1>Create Account</h1>
			<input type="text" name='name' placeholder="Name"  required/>
			<input type="email" name="username" placeholder="Email" required/>
			<input type="password" name="password" placeholder="Password"  required/>

      <div class="accType">
        <p>Sign Up as: </p>
        <label id="type" class="switch">
          <input id="typeCheck" type="checkbox" name="type">
          <span class="slider round"><b>Customer</b> <b>Shopkeeper</b></span>
        </label>
      </div>

			<div id="shopType">
				<input type="text" name="shopName" placeholder="Shop Name" value="">
				<input type="text" name="locatedAt" placeholder="Shop Located At (Enter city name)" value="">
			</div>

			<button type="submit">Sign Up</button>
		</form>
	</div>

	<div class="form-container sign-in-container">
		<form action="/auth/login" method="POST">
			<h1>Sign in</h1>
			<input type="email" name="username" placeholder="Email" required/>
			<input type="password" name="password" placeholder="Password" required/>

			<button>Sign In</button>
		</form>
	</div>

	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Already have an Account?</h1>
				<p></p>
				<button class="ghost" id="signIn">Sign In</button>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>First time Here?</h1>
				<p></p>
				<button class="ghost" id="signUp">Sign Up</button>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript" src="/scripts/auth.js"></script>

</body>
</html>
